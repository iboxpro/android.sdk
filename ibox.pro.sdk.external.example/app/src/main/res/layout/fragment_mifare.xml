<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <Button
        android:id="@+id/mifare_btn_poll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Poll"
        android:layout_marginTop="3dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtBlockAddr"
        android:text="14"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtKeyValue"
        android:text="A73f5dc1d333"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtTimeout"
        android:text="500"
        />


    <Button
        android:id="@+id/mifare_btn_verify_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify pin"
        android:layout_marginTop="3dp"
        />
    <Button
        android:id="@+id/mifare_btn_write_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write card"
        android:layout_marginTop="3dp"
        />
    <Button
        android:id="@+id/mifare_btn_read_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read card"
        android:layout_marginTop="3dp"
        />

        <Button
            android:id="@+id/mifare_btn_penetrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penetrate"
            android:layout_marginTop="3dp"
            />

    <Button
        android:id="@+id/mifare_btn_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:layout_marginTop="3dp"
        />

    <Button
        android:id="@+id/mifare_btn_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status"
        android:layout_marginTop="3dp"
        />

        <Button
            android:id="@+id/mifare_btn_poweronnfc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Power on NFC"
            android:layout_marginTop="3dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mifare_txt_apdu"
            android:text="906A000000"
            />

        <Button
            android:id="@+id/mifare_btn_send_apdu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send apdu"
            android:layout_marginTop="3dp"
            />


        <Button
            android:id="@+id/mifare_btn_poweroffnfc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Power off NFC"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars = "vertical"
            android:text="New methods"
            />

        <RadioGroup
            android:id="@+id/rg_mifare_card_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/payment_rb_card"
            >
            <RadioButton
                android:id="@+id/rb_mifare_card_type_classic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Classic"
                />
            <RadioButton
                android:id="@+id/rb_mifare_card_type_ultralight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ultralight"
                />
        </RadioGroup>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_new_timeout"
            android:text="30"
            android:hint="Timeout"
            />

        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_new_block"
        android:text=""
            android:hint="block"
        />


        <Button
            android:id="@+id/mifare_btn_new_poll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Poll"
            android:layout_marginTop="3dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_new_key_type"
            android:hint="KeyType"
            android:text=""
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_new_key_value"
            android:hint="KeyValue"
            android:text=""
            />
        <Button
            android:id="@+id/mifare_btn_new_authenticate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Authenticate"
            android:layout_marginTop="3dp"
            />
        <Button
            android:id="@+id/mifare_btn_new_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Read card"
            android:layout_marginTop="3dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_new_data"
            android:hint="Data"
            android:text=""
            />
        <Button
            android:id="@+id/mifare_btn_new_write"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Write card"
            android:layout_marginTop="3dp"
            />
        <Button
            android:id="@+id/mifare_btn_new_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finish"
            android:layout_marginTop="3dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_new_start_block"
            android:hint="Start block"
            android:text=""
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_new_end_block"
            android:hint="End block"
            android:text=""
            />

        <Button
            android:id="@+id/mifare_btn_new_fastread"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fast Read"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:id="@+id/mifare_txt_log"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scrollbars = "vertical"
            />

        <Button
            android:id="@+id/mifare_btn_beep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beep"
            android:layout_marginTop="3dp"
            />

        <Button
            android:id="@+id/mifare_btn_disable_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disable sound"
            android:layout_marginTop="3dp"
            />

        <Button
            android:id="@+id/mifare_btn_enable_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable sound"
            android:layout_marginTop="3dp"
            />

        <Button
            android:id="@+id/mifare_btn_read_card_pan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Read card pan"
            android:layout_marginTop="3dp"
            />

        <Button
            android:id="@+id/mifare_btn_read_card_panhash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Read card pan hash"
            android:layout_marginTop="3dp"
            />




    </LinearLayout>
    </ScrollView>
</LinearLayout>