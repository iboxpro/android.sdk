<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/stuff_btn_test_mifare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Mifare"
            android:layout_marginTop="3dp"
            />

        <Button
            android:id="@+id/stuff_btn_beep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beep"
            android:layout_marginTop="3dp"
            />


        <Button
            android:id="@+id/stuff_btn_disable_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disable sound"
            android:layout_marginTop="3dp"
            />

        <Button
            android:id="@+id/stuff_btn_enable_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable sound"
            android:layout_marginTop="3dp"
            />

        <Button
            android:id="@+id/stuff_btn_read_card_pan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Read card pan"
            android:layout_marginTop="3dp"
            />

    <TextView
        android:id="@+id/stuff_txt_log"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scrollbars = "vertical"
        />

    </LinearLayout>
    </ScrollView>
</LinearLayout>